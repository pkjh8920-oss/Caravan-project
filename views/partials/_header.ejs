<nav class="bg-white shadow-md mb-8">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-gray-800 hover:text-blue-600">Caravan</a>
        <div class="flex items-center space-x-6">
            <a href="/" class="text-gray-600 hover:text-blue-500">Home</a>
            <% if (user) { %>
                <a href="/dashboard" class="text-gray-600 hover:text-blue-500">Dashboard</a>
                <form action="/logout" method="POST" class="inline">
                    <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Logout</button>
                </form>
                <span class="text-blue-600 font-semibold"><%= user.name %> (<%= user.role.charAt(0).toUpperCase() + user.role.slice(1).toLowerCase() %>)</span>
            <% } else { %>
                <a href="/login" class="text-gray-600 hover:text-blue-500">Login</a>
                <a href="/signup" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Sign Up</a>
            <% } %>
        </div>
    </div>
</nav>